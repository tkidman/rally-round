<html lang="en">

<head>
	<link rel="stylesheet" type="text/css" href="./assets/css/style.css">
	<link rel="stylesheet" type="text/css" href="./assets/css/animation.css">
	<link rel="stylesheet" type="text/css" href="./assets/css/w3.css">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<style>
		.collapsed {
			visibility: collapse;
		}
	</style>
    <link rel="icon" href="./assets/{{logo}}">
</head>

<body style="{{this.backgroundStyle}}">
	{{{navigation}}}
	<div id="container">
		<div id="flexContainer">
			<div class="flexBox">
				<div style="margin-bottom: 1em;" class="w3-hide-large w3-hide-medium w3-hide-small">
					<div class="logo" style="display:flex;">
						<img src="./assets/fantasy.jpg" />
						<h2 style="margin-left:1em;">{{localization.team_standings}}</h2>
					</div>
				</div>
				<table id="tableTeams">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th>{{localization.team}}</th>
							<th>üí∞</th>
							<th><img src="./assets/country-flags/mco.png" /></th>
							<th><img src="./assets/country-flags/swe.png" /></th>
							<th><img src="./assets/country-flags/usa.png" /></th>
                            <th><img src="./assets/country-flags/arg.png" /></th>
                            <th><img src="./assets/country-flags/pol.png" /></th>
                            <th><img src="./assets/country-flags/deu.png" /></th>
                            <th><img src="./assets/country-flags/nzl.png" /></th>
                            <th><img src="./assets/country-flags/aus.png" /></th>
							<th>{{localization.points}}</th>
							<th>{{localization.gap}}</th>
						</tr>
					</thead>
					<tbody>
						{{#each teams}}{{#with this}}
						<tr>
							<td>{{rank}}</td>
							<td>
								{{#if positive}}
								<span class="positive"><i class="arrow up"></i>&nbsp;{{evolution}}</span>
								{{/if}}
								{{#if neutral}}
								<span class="neutral">=</span>
								{{/if}}
								{{#if negative}}
								<span class="negative"><i class="arrow down"></i>&nbsp;{{evolution}}</span>
								{{/if}}
							</td>
							<td class="text-left bold">{{name}} <small>( {{drivers}} )</small></td>
							<td>${{budget}}</td>
							<td>{{[MONTE CARLO]}}</td>
							<td>{{V√ÑRMLAND}}</td>
							<td>{{[NEW ENGLAND]}}</td>
							<td>{{[CATAMARCA PROVINCE]}}</td>
							<td>{{[≈ÅƒòCZNA COUNTY]}}</td>
							<td>{{[BAUMHOLDER]}}</td>
							<td>{{[HAWKES BAY]}}</td>
							<td>{{[MONARO]}}</td>
							<td class="bold">{{points}}</td>
							<td>{{gap}}</td>
						</tr>
						{{/with}}{{/each}}
					</tbody>

				</table>


			</div>

			<div class="flexBox">
				<h2>This week's JRC Best Buys&#8482;</h2>
				<table id="bestBuys">
					<thead>
						<tr>
							<th>{{localization.driver}}</th>
							<th>{{localization.cost}}</th>
							<th>{{localization.profit}}</th>
							<th>{{localization.value}}</th>
						</tr>
					</thead>
					<tbody>
						{{#each bestBuy}}{{#with this}}
						<tr>
							<td class="text-left bold">{{name}}</td>
							<td>{{cost}}</td>
							<td>{{total}}</td>
							<td class="bold">{{value}}</td>
						</tr>
						{{/with}}{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<!--
        DROPDOWN
    -->
	<script>
		var teamDiv = document.getElementById("teamNav")
		var topNav = document.getElementsByClassName("w3-top")[0];
		topNav.appendChild(teamDiv);
		function openNav() {
			var x = document.getElementById("mobileNav");
			if (x.className.indexOf("w3-show") == -1) {
				x.className += " w3-show";
			} else {
				x.className = x.className.replace(" w3-show", "");
			}
		}
	</script>
</body>

</html>