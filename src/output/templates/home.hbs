<div class="container">
  <div class="flexContainer">
    <div class="flexBox">
      <div class="mb-1">
        <div class="logo d-flex">
          <img src="./assets/{{logo}}" />
          <h2 class="ml-1">{{siteTitlePrefix}} Home</h2>
        </div>
      </div>
      <div class="home-layout">
        <main class="home-main">
      {{#if activeEvents.length}}
      <div class="mb-1">
        <h3>Active Events</h3>
        {{#each activeEvents}}
        <div class="card mb-1">
          <div class="card-header">
            <h4>{{this.name}}</h4>
          </div>
          <div class="card-body">
            <p><strong>{{this.division}}</strong> - {{this.location}}</p>
            {{#if this.showingLivePoints}}
            <p>Live points active</p>
            {{/if}}
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}

      {{#if rules}}
      <div class="mb-1">
        <h3>Championship Rules</h3>
        <div class="card">
          <div class="card-body">
            {{#if rules.dropRounds}}
            <p><strong>Drop Rounds:</strong> {{rules.dropRounds}} lowest scoring {{#if (eq rules.dropRounds 1)}}round{{else}}rounds{{/if}} dropped</p>
            {{/if}}
            {{#if rules.overallPointsTop5.length}}
            <p><strong>Points (Top 5):</strong> {{#each rules.overallPointsTop5}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
            {{/if}}
            {{#if rules.powerStagePoints.length}}
            <p><strong>Power Stage Points:</strong> {{#each rules.powerStagePoints}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
            {{/if}}
          </div>
        </div>
      </div>
      {{/if}}

      {{#if divisionInfo.length}}
      <div class="mb-1">
        <h3>Division Car Regulations</h3>
        {{#each divisionInfo}}
        <div class="card mb-1">
          <div class="card-header">
            <h4>{{this.name}}</h4>
          </div>
          <div class="card-body">
            {{#if this.cars}}
            <p><strong>Allowed Cars:</strong></p>
            <ul>
              {{#each this.cars}}
              <li>{{this}}</li>
              {{/each}}
            </ul>
            {{/if}}
            {{#if this.excludedCars}}
            <p><strong>Banned Cars:</strong></p>
            <ul>
              {{#each this.excludedCars}}
              <li>{{this}}</li>
              {{/each}}
            </ul>
            {{/if}}
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}

        {{#if top3ByDivision.length}}
        <div class="top-drivers-by-division mb-1">
          <h3>Top 3 Drivers â€” by Division</h3>
          <div class="top-drivers-division-grid">
          {{#each top3ByDivision}}
          <div class="top-drivers-division">
            <h4 class="top-drivers-division__title">{{this.divisionName}}</h4>
            <table class="top-drivers-table">
              <thead>
                <tr>
                  <th class="th-pos">{{../localization.pos}}</th>
                  <th class="th-change"></th>
                  <th class="th-nat">{{../localization.nat}}</th>
                  <th class="th-driver">{{../localization.driver}}</th>
                  <th class="th-points">{{../localization.points}}</th>
                </tr>
              </thead>
              <tbody>
                {{#each this.top3}}
                <tr{{#if this.colour}} style="background-color: {{this.colour}}"{{/if}}>
                  <td class="td-pos">{{this.standing.currentPosition}}</td>
                  <td class="td-change">
                    {{#if this.positive}}
                    <span class="positive">
                      <i class="arrow up"></i>&nbsp;{{this.standing.positionChange}}
                    </span>
                    {{/if}}
                    {{#if this.neutral}}
                    <span class="neutral">=</span>
                    {{/if}}
                    {{#if this.negative}}
                    <span class="negative">
                      <i class="arrow down"></i>&nbsp;{{this.standing.positionChange}}
                    </span>
                    {{/if}}
                  </td>
                  <td class="td-nat">
                    <img src="./assets/country-flags/{{this.country.code}}.png" class="img-sm"
                      alt="{{this.country.code}}" title="{{this.country.code}}" />
                  </td>
                  <td class="td-driver text-left bold">{{this.driver.name}}</td>
                  <td class="td-points bold">{{this.standing.totalPoints}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          {{/each}}
          </div>
        </div>
        {{/if}}
        </main>
        {{#if historicalSeasonLinks.length}}
        <aside class="home-aside" aria-label="Previous seasons">
          <h3 class="home-aside__title">Previous Seasons</h3>
          <ul class="home-aside__list">
            {{#each historicalSeasonLinks}}
            {{#unless @first}}
            <li><a href="{{this.href}}">{{this.name}}</a></li>
            {{/unless}}
            {{/each}}
          </ul>
        </aside>
        {{/if}}
      </div>
    </div>
  </div>
</div>
