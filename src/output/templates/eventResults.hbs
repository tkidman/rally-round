<html lang="en">

<head>
    <link rel="stylesheet" type="text/css" href="./assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="./assets/css/animation.css">
    <link rel="stylesheet" type="text/css" href="./assets/css/w3.css">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="icon" href="./assets/{{logo}}">
</head>

<body style="{{this.backgroundStyle}}">
{{{navigation}}}
<div id="container">
    <div id="flexContainer">
        <div class="flexBox">
            <div style="margin-bottom: 1em;" class="w3-hide-medium w3-hide-small">
                <div class="logo" style="display:flex;">
                    <img src="./assets/{{logo}}" />
                    <h2 style="margin-left:1em;">{{title}} {{location.countryName}} Driver Results</h2>
                </div>
            </div>

            <table id="tableDrivers">
                <thead>
                <tr>
                    <th>Pos</th>
                    <th>Nat</th>
                    <th>Driver</th>
                    {{#if overall}}
                        <th>Div</th>
                    {{/if}}
                    {{#if showTeam}}
                        {{#unless hideTeamLogoColumn}}
                            <th>Team</th>
                        {{/unless}}
                        {{#if showTeamNameTextColumn}}
                            <th>Team Name</th>
                        {{/if}}
                    {{/if}}
                    {{#if showCar}}
                        <th>Car</th>
                    {{/if}}
                    <td>PS</td>
                    <td>Diff</td>
                    <td>Total</td>
                    <td>Diff</td>
                    {{#if showStagePoints}}
                        <td>Stage Points</td>
                    {{/if}}
                    {{#if showPowerStagePoints}}
                        <td>PS Points</td>
                    {{/if}}
                    <td>Points</td>
                    <td>Total Points</td>
                </tr>
                </thead>
                <tbody>
                {{#each rows}}
                    <tr>
                        <td>{{this.position}}</td>
                        <td>
                            <img src="./assets/country-flags/{{this.country.code}}.png" style="max-width:1.5em; max-height:1.5em;" alt="{{this.country.code}}" title="{{this.country.code}}"/>
                        </td>
                        <td class="text-left bold">{{this.driver.name}}</td>
                        {{#if ../overall}}
                            <td>{{this.divisionDisplayName}}</td>
                        {{/if}}
                        {{#if ../showTeam}}
                            {{#unless ../hideTeamLogoColumn}}
                                <td>
                                    <img src="./assets/teams/{{this.teamId}}.png" style="max-width:2em; max-height:2em;" alt="{{this.teamId}}" title="{{this.teamId}}"/>
                                </td>
                            {{/unless}}
                            {{#if ../showTeamNameTextColumn}}
                                <td class="text-left">{{this.teamId}}</td>
                            {{/if}}
                       {{/if}}
                        {{#if ../showCar}}
                            {{#if ../showCarName}}
                                <td class="text-left">
                                    {{this.entry.vehicleName}}
                                </td>
                            {{else}}
                                <td>
                                    <img src="./assets/cars/{{this.car}}.png" style="max-width:2em; max-height:2em;" alt="{{this.car}}" title="{{this.car}}"/>
                                </td>
                            {{/if}}
                        {{/if}}
                        <td>{{this.entry.stageTime}}{{#if this.entry.penaltyReason}}*{{/if}}</td>
                        <td>{{this.entry.stageDiff}}</td>
                        <td>{{this.entry.totalTime}}{{#if this.entry.penaltyReason}}*{{/if}}</td>
                        <td>{{this.entry.totalDiff}}</td>
                        {{#if ../showStagePoints}}
                            <td>{{this.stagePoints}}</td>
                        {{/if}}
                        {{#if ../showPowerStagePoints}}
                            <td>{{this.powerStagePoints}}</td>
                        {{/if}}
                        <td>{{this.overallPoints}}</td>
                        <td class="bold">{{this.pointsDisplay}}</td>
                    </tr>
                {{/each}}
                </tbody>

            </table>
            <div style="margin:0 auto; text-align:center;">
                <p>last updated at: {{lastUpdatedAt}}</p>
            </div>
            {{#if incorrectCarTimePenaltySeconds}}
                <div style="margin:0 auto; text-align:center;">
                    <p>*{{incorrectCarTimePenaltySeconds}} second penalty applied for incorrect car choice</p>
                </div>
            {{/if}}
        </div>
    </div>
</div>

<!--
    DROPDOWN
-->
<script>
    function openNav() {
        var x = document.getElementById("mobileNav");
        if (x.className.indexOf("w3-show") == -1) {
            x.className += " w3-show";
        } else {
            x.className = x.className.replace(" w3-show", "");
        }
    }
</script>
<!--
    BACKGROUND ANIMATION
-->
{{#unless this.backgroundStyle}}
    <div id="particles-js"></div>
    <script src="http://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="./assets/particleConfig.js"></script>
{{/unless}}
</body>

</html>